# ============================================
# Fast Ray Gram Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp example_env .env
# nano .env
# ============================================

# ============================================
# Database Configuration
# ============================================
DB_HOST=frg-db
DB_PORT=5432
DB_NAME=frg
DB_USER=frg_db_admin
DB_PASSWORD=your_secure_database_password_here
DB_ECHO=false

# ============================================
# Redis Configuration (Main)
# ============================================
REDIS_HOST=frg-redis
REDIS_PORT=6379
REDIS_DB_NUMBER=0
REDIS_MAX_CONNECTIONS=100
REDIS_PASSWORD=your_redis_password_here
REDIS_USER=frg_redis_admin
REDIS_USER_PASSWORD=your_redis_user_password_here

# ============================================
# Redis Configuration (Rate Limiter)
# ============================================
RATE_LIMIT_HOST=frg-rate-limiter-redis
RATE_LIMIT_PORT=6379
RATE_LIMIT_DB_NUMBER=0
RATE_LIMIT_MAX_CONNECTIONS=100
RATE_LIMIT_PASSWORD=your_rate_limit_redis_password_here
RATE_LIMIT_USER=frg_redis_rate_limiter_admin
RATE_LIMIT_USER_PASSWORD=your_rate_limit_redis_user_password_here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_EXCLUDE_IP_ADDRESSES=192.168.65.2,192.168.1.1
RATE_LIMIT_DEFAULT_REQUESTS_PER_MINUTE=60

# ============================================
# Authentication Settings
# ============================================
AUTH_ENABLED=true
AUTH_JWT_MASTER_KEY=your_very_secure_jwt_master_key_here_min_32_chars
AUTH_JWT_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_SEC=1200
AUTH_REFRESH_TOKEN_EXPIRE_SEC=3000
AUTH_MAX_SESSIONS=3

# ============================================
# Application Settings
# ============================================
APP_SECRET_PATH=/secret_url
APP_ALLOWED_DOMAINS=your-domain.com,www.your-domain.com
APP_SALT=your_secret_salt_here
APP_SUPERUSER_LOGIN=admin
APP_SUPERUSER_PASSWORD=your_superuser_password_here
APP_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
APP_DISABLE_REGISTRATION_STARTUP_PARAM=false
APP_MAX_LIMIT_IP_STARTUP_PARAM=10
APP_MAX_TOTAL_GB_STARTUP_PARAM=1000
APP_BASE_LIMIT_IP=1
APP_BASE_TOTAL_GB=100
APP_PROMO_DAYS=7
APP_EXPIRY_DAYS=30

# ============================================
# 3X-UI Integration (should be on separate server)
# ============================================
XUI_SCHEME=http
XUI_HOST=xui.your-domain.com
XUI_PORT=8080
XUI_SUBSCRIPTION_PORT=2096
XUI_SECRET_PATH=/your_secret_path
XUI_USERNAME=admin
XUI_PASSWORD=your_xui_password_here
